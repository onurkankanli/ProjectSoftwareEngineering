@using MudblazorWeather.Backend.DataHandling
@using Color = MudBlazor.Color

<MudToggleIconButton @bind-Toggled="@Toggle"
                     Icon="@Icons.Filled.FavoriteBorder" Color="@Color.Error" Title="Hiding Student Sensors"
                     ToggledIcon="@Icons.Filled.Favorite" ToggledColor="@Color.Success" ToggledTitle="Showing Student Sensors"/>

@code{
    
    bool Toggle
    {
        get { return CachedData.Instance.showStudentSensors; }
        set
        {
            CachedData.Instance.showStudentSensors = value;
            CachedData.Instance.ToggleStudentSensors();
        }
    }
}